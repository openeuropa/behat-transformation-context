{
    "name": "openeuropa/behat-transformation-context",
    "homepage": "https://github.com/openeuropa/behat-transformation-context",
    "description": "Behat package to transform human readable labels into selectors or page paths.",
    "keywords": ["behat", "test", "transform"],
    "type": "library",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "behat/behat": "^3.4",
        "php": ">=8.0"
    },
    "require-dev": {
        "openeuropa/code-review": "2.x-dev"
    },
    "autoload": {
        "psr-4": {
            "OpenEuropa\\Behat\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEuropa\\Behat\\Tests\\": "./tests/features/bootstrap"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "phpro/grumphp": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
